<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developers"
        android:layout_marginTop="15dp"
        android:id="@+id/id_dev"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/id_anshit_img"
            android:src="@drawable/anshit"
            android:layout_marginStart="46dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/id_anshit_name"
            android:elevation="10dp"
            android:background="#fafafa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anshit Mandloi"
            android:id="@+id/id_anshit_name"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/id_ankit_img"
            android:src="@drawable/ankit"
            android:layout_marginStart="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/id_ankit_name"
            android:elevation="10dp"
            android:background="#fafafa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankit Deora"
            android:id="@+id/id_ankit_name"
            android:gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/id_pradeepta_img"
        android:src="@drawable/pradeepta"
        android:layout_marginStart="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/id_pradeepta_name"
        android:elevation="10dp"
        android:background="#fafafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pradeepta Das"
        android:id="@+id/id_pradeepta_name"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:textSize="17sp" />

</RelativeLayout>


</LinearLayout>